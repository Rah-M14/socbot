<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>    

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="green">
        <color rgba="0 1 0 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    
    <!-- BASE LINK  -->

    <link name="base_link">

    </link>

    <!-- CHASSIS LINK -->

    <joint name="chassis_joint" type="fixed" >
        <parent link="base_link" />
        <child link="chassis" />
        <origin xyz="-0.2 0 0" />
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.2 0 0.09" />
            <geometry>
                <box size="0.4 0.25 0.18" />
            </geometry>
            <material name="white" />
        </visual>
        <collision>
            <origin xyz="0.2 0 0.09" />
            <geometry>
                <box size="0.4 0.25 0.18" />
            </geometry>
        </collision>
        <xacro:inertial_box mass="6" x="0.4" y="0.25" z="0.18" >
            <origin xyz="0.2 0.125 0.09" rpy="0 0 0" />
        </xacro:inertial_box>
    </link>

    <!-- LEFT FRONT WHEEL LINK -->

    <joint name="left_front_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="left_front_wheel" />
        <origin xyz="0.13 0.125 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_front_wheel" >
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
            <material name="green" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
        </collision>
    </link>

    <!-- LEFT BACK WHEEL LINK -->

    <joint name="left_back_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="left_back_wheel" />
        <origin xyz="-0.13 0.125 0" rpy="-${pi/2} 0 0" />
        <axis xyz="0 0 1" />
    </joint>

    <link name="left_back_wheel" >
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
        </collision>
    </link>

    <!-- RIGHT FRONT WHEEL LINK -->

    <joint name="right_front_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="right_front_wheel" />
        <origin xyz="0.13 -0.125 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_front_wheel" >
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
            <material name="green" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
        </collision>
    </link>

    <!-- RIGHT BACK WHEEL LINK -->

    <joint name="right_back_wheel_joint" type="continuous" >
        <parent link="base_link" />
        <child link="right_back_wheel" />
        <origin xyz="-0.13 -0.125 0" rpy="${pi/2} 0 0" />
        <axis xyz="0 0 -1" />
    </joint>

    <link name="right_back_wheel" >
        <visual>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.055" length="0.045" />
            </geometry>
        </collision>
    </link>

</robot>